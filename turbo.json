{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": ["CONVEX_DEPLOY_KEY"],
  "tasks": {
    "codegen": {
      "env": ["CONVEX_DEPLOY_KEY"],
      "outputs": ["convex/_generated/**"]
    },
    "build": {
      "dependsOn": ["^build", "codegen"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint", "codegen"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "codegen"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
