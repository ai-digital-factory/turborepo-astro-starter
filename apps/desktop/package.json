{
  "name": "desktop",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "pnpm run lint:eslint && pnpm run check-types",
    "lint:eslint": "eslint .",
    "check-types": "pnpm run check-types:node && pnpm run check-types:app",
    "check-types:node": "tsc --noEmit -p tsconfig.node.json",
    "check-types:app": "tsc --noEmit -p tsconfig.json",
    "preview": "vite preview"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^39.2.7",
    "eslint": "^9.17.0",
    "typescript": "5.9.2",
    "vite": "^6.0.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-tsconfig-paths": "^6.0.3"
  }
}
